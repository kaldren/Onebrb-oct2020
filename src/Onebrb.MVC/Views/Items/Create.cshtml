@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Onebrb.MVC.Models.Item.CreateItemViewModel 

    <p>@Localizer["CreateItemPublishItemHeaderText"]</p>

<form>
    <div class="form-group">
        <label for="inputTitle">@Localizer["CreateItemTitle"]</label>
        <input type="text" class="form-control" id="inputTitle" placeholder="BMW 330 XD 2002">
    </div>
    <div class="form-group">
        <label for="selectCategory">@Localizer["CreateItemCategory"]</label>
        <select class="form-control" id="selectCategory">
            @foreach (var category in Model.Categories)
            {
                <option>@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="textareaDescription">@Localizer["CreateItemDescription"]</label>
        <textarea class="form-control" id="textareaDescription" rows="3"></textarea>
    </div>
    <button type="button" class="btn btn-success">@Localizer["CreateItemPublishButton"]</button>
</form>

@{
}
